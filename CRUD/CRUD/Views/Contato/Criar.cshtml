@model ContatoModel
@{
    ViewData["Title"] = "Criar Contato";
}

<main class="text-center">

    <h1 class="display-5 text-light">Criar Contato</h1>
    <br />
    <form asp-controller="Contato" asp-action="Criar" method="post">

        <small class="form-text text-grey">
            Complete os campos abaixo.
        </small>

        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Nome">
        </div>

        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Email">
        </div>

        <div class="form-group">
            <label for="numero">Email address</label>
            <input type="text" asp-for="Numero" class="form-control" placeholder="Número">
        </div>

         <br />

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-secondary">Adicionar</button>
            <a class="btn btn-warning" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
        </div>
        
    </form>btn-block

</main>

